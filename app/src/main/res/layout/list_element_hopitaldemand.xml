<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="#6ef4f4f4"
        >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageButton
                android:id="@+id/AddDemand"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:padding="4dp"
                app:srcCompat="@drawable/success"/>

            <TextView
                android:id="@+id/Hopital_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/AddDemand"
                android:text="Clinique TALIA ORL et Esthetique"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/Hopital_adress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Hopital_name"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#FFFFFF"
                android:layout_toRightOf="@id/AddDemand"
                android:text="Baba hassen lotissement a Alger"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />


            <TextView
                android:id="@+id/GPSDemand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Hopital_adress"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/AddDemand"
                android:background="@color/black"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="23 Km"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small.Inverse"
                android:textStyle="bold"
                android:textColor="#FFFFFF"/>

            <TextView
                android:id="@+id/specialiteList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/GPSDemand"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@id/AddDemand"
                android:text=" | ORL | Chir.Plastique-reparatrice"
                android:textStyle="italic"
                android:textColor="#FFFFFF"/>

            <ImageButton
                android:id="@+id/DeleteDemand"
                android:layout_width="40dp"
                android:layout_height="40dp"

                android:layout_alignParentStart="true"
                android:layout_below="@+id/Hopital_adress"
                android:layout_toStartOf="@+id/Hopital_adress"
                app:srcCompat="@drawable/dustbin" />

            <TextView
                android:id="@+id/HospitalPhone"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:layout_alignBaseline="@+id/GPSDemand"
                android:layout_alignBottom="@+id/GPSDemand"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="48dp"
                android:ems="10"
                android:text="0561060997"
                android:textColor="#FFFFFF"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>