<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_margin"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="@dimen/activity_margin"
    android:background="@drawable/background">
    <!--android:background="@drawable/leaf-->


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register and Sign in"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="16dp"
        android:layout_gravity="center_horizontal"/>

    <EditText
        android:id="@+id/Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:ems="1"
        android:inputType="textEmailAddress"
        android:hint="UserName"
        android:background="#6ef4f4f4"
        android:drawablePadding="78dp"
        android:textColorHint="#fff"
        android:drawableLeft="@drawable/ic_person_white_24dp"
        />

    <EditText
        android:id="@+id/Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:ems="1"
        android:inputType="textPassword"
        android:hint="......"
        android:textColorHint="#fff"
        android:background="#6ef4f4f4"
        android:drawablePadding="78dp"
        android:drawableLeft="@drawable/ic_lock_white_24dp"
        />

    <TextView
        android:id="@+id/wronginfos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="worng Username or password"
        android:textColor="#FFFFFF"
        android:background="#e53935"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:padding="8dp"
        android:textSize="10dp"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/LoginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Login in"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:background="@drawable/background_login_two"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:layout_marginTop="16dp"
        />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_marginTop="32dp"
        android:text="             -------------  OR  --------------"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp">

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight=".5"/>
        <Button
            android:id="@+id/createaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Create an account"
            android:textAllCaps="true"
            android:textColor="#fff"
            android:background="@drawable/background_btn3"
            android:paddingLeft="48dp"
            android:paddingRight="48dp"
            android:layout_marginTop="16dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        />


</LinearLayout>